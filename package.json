{
  "name": "authrim",
  "version": "0.1.0",
  "description": "A lightweight OpenID Connect Provider built on Cloudflare Workers - Monorepo",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "build": "turbo run build",
    "build:api": "turbo run build --filter=!ui",
    "dev": "turbo run dev --parallel",
    "deploy": "./scripts/deploy-with-retry.sh",
    "deploy:with-router": "./scripts/deploy-with-retry.sh",
    "deploy:retry": "./scripts/deploy-with-retry.sh",
    "deploy:ui": "pnpm --filter=ui build && wrangler pages deploy packages/ui/.svelte-kit/cloudflare --project-name=authrim-ui",
    "deploy:api": "BUILD_TARGET=api ./scripts/deploy-with-retry.sh",
    "deploy:all": "pnpm run deploy:ui && pnpm run deploy:api",
    "test": "turbo run test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:lighthouse": "lhci autorun",
    "test:lighthouse:collect": "lhci collect",
    "test:lighthouse:assert": "lhci assert",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write \"packages/**/*.ts\"",
    "format:check": "prettier --check \"packages/**/*.ts\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "generate-keys": "tsx scripts/generate-keys.ts",
    "migrate:create": "tsx scripts/create-migration.ts",
    "migrate:info": "echo '\nðŸ“‹ Migration Commands:\n\n  migrate:create <name>  - Create new migration file\n  \nFor applying migrations, use wrangler:\n  wrangler d1 migrations list authrim-db\n  wrangler d1 migrations apply authrim-db\n\nFor local development:\n  wrangler d1 execute authrim-db --local --file=migrations/000_schema_migrations.sql\n  wrangler d1 execute authrim-db --local --file=migrations/001_initial_schema.sql\n'"
  },
  "workspaces": [
    "packages/*"
  ],
  "keywords": [
    "openid-connect",
    "oidc",
    "oauth2",
    "cloudflare-workers",
    "identity-provider",
    "authentication"
  ],
  "author": "",
  "license": "Apache-2.0",
  "dependencies": {
    "hono": "^4.0.0",
    "jose": "^6.1.2"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@cloudflare/workers-types": "^4.20240117.0",
    "@esbuild/win32-x64": "^0.25.12",
    "@eslint/js": "^9.39.1",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.56.1",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitest/coverage-v8": "^4.0.8",
    "axe-core": "^4.11.0",
    "eslint": "^9.39.1",
    "globals": "^15.14.0",
    "prettier": "^3.2.4",
    "tsx": "^4.20.6",
    "turbo": "^2.6.1",
    "typescript": "^5.3.3",
    "vitest": "^4.0.8",
    "wrangler": "^4.46.0"
  },
  "optionalDependencies": {
    "@esbuild/linux-x64": "^0.25.12"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
