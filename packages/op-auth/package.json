{
  "name": "@authrim/op-auth",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "wrangler dev --config wrangler.dev.toml 2>/dev/null || wrangler dev",
    "deploy": "[ -n \"$DEPLOY_ENV\" ] && wrangler deploy --config wrangler.$DEPLOY_ENV.toml || wrangler deploy",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "lint": "echo 'op-auth: lint skipped'",
    "test": "npx vitest run",
    "test:unit": "npx vitest run",
    "test:passkey": "npx vitest run --config vitest.passkey.config.ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@authrim/shared": "workspace:*",
    "@simplewebauthn/server": "^13.2.2",
    "hono": "^4.10.6",
    "jose": "^6.1.2",
    "resend": "^6.5.2",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251121.0",
    "typescript": "^5.9.3",
    "vitest": "^2.1.8",
    "wrangler": "^4.53.0"
  }
}
