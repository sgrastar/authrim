{
  "name": "@authrim/policy-service",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "wrangler dev --config wrangler.dev.toml 2>/dev/null || wrangler dev",
    "deploy": "[ -n \"$DEPLOY_ENV\" ] && wrangler deploy --config wrangler.$DEPLOY_ENV.toml || wrangler deploy",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "lint": "echo 'policy-service: lint skipped'",
    "test": "vitest run",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@authrim/shared": "workspace:*",
    "@authrim/policy-core": "workspace:*",
    "hono": "^4.10.6"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251121.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.13",
    "wrangler": "^4.50.0"
  }
}
