{
  "name": "@authrim/shared",
  "version": "0.1.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./utils/*": {
      "import": "./dist/utils/*.js",
      "default": "./src/utils/*.ts"
    },
    "./types/*": {
      "import": "./dist/types/*.js",
      "default": "./src/types/*.ts"
    },
    "./middleware/*": {
      "import": "./dist/middleware/*.js",
      "default": "./src/middleware/*.ts"
    },
    "./storage/*": {
      "import": "./dist/storage/*.js",
      "default": "./src/storage/*.ts"
    },
    "./durable-objects/*": {
      "import": "./dist/durable-objects/*.js",
      "default": "./src/durable-objects/*.ts"
    },
    "./notifications": {
      "import": "./dist/notifications/index.js",
      "default": "./src/notifications/index.ts"
    },
    "./constants": {
      "import": "./dist/constants.js",
      "default": "./src/constants.ts"
    },
    "./test/setup": "./src/test/setup.ts",
    "./test/fixtures": "./src/test/fixtures.ts"
  },
  "scripts": {
    "build": "tsc",
    "deploy": "[ -n \"$DEPLOY_ENV\" ] && wrangler deploy --config wrangler.$DEPLOY_ENV.toml || wrangler deploy",
    "dev": "wrangler dev --config wrangler.dev.toml 2>/dev/null || wrangler dev",
    "typecheck": "tsc --noEmit",
    "lint": "echo 'Shared package: lint skipped'",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "hono": "^4.10.6",
    "jose": "^6.1.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251121.0",
    "@types/node": "^20.19.25",
    "typescript": "^5.9.3"
  }
}
