{
  "name": "@authrim/shared",
  "version": "0.1.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./utils/*": "./dist/utils/*.js",
    "./types/*": "./dist/types/*.js",
    "./middleware/*": "./dist/middleware/*.js",
    "./storage/*": "./dist/storage/*.js",
    "./durable-objects/*": "./dist/durable-objects/*.js",
    "./constants": "./dist/constants.js"
  },
  "scripts": {
    "build": "tsc",
    "deploy": "[ -n \"$DEPLOY_ENV\" ] && wrangler deploy --config wrangler.$DEPLOY_ENV.toml || wrangler deploy",
    "dev": "wrangler dev --config wrangler.dev.toml 2>/dev/null || wrangler dev",
    "typecheck": "tsc --noEmit",
    "lint": "echo 'Shared package: lint skipped'",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "hono": "^4.0.0",
    "jose": "^6.1.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240117.0",
    "@types/node": "^20.11.5",
    "typescript": "^5.3.3"
  }
}
