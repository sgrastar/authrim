{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "OIDC Conformance Test Plan Definitions for Authrim",
  "plans": {
    "basic-op": {
      "name": "oidcc-basic-certification-test-plan",
      "displayName": "OIDC Basic OP Certification",
      "outputDir": "OIDC Basic OP",
      "profile": "basic-op",
      "configFile": "basic-op.json",
      "requiresBrowser": true,
      "variants": {
        "server_metadata": "discovery",
        "client_registration": "dynamic_client"
      },
      "description": "OpenID Connect Basic Certification Profile - Authorization Code Flow"
    },
    "config-op": {
      "name": "oidcc-config-certification-test-plan",
      "displayName": "OIDC Config OP Certification",
      "outputDir": "OIDC Config OP",
      "profile": "basic-op",
      "configFile": "config-op.json",
      "requiresBrowser": false,
      "variants": {
        "server_metadata": "discovery"
      },
      "description": "OpenID Connect Configuration Certification Profile - Discovery and JWKS"
    },
    "dynamic-op": {
      "name": "oidcc-dynamic-certification-test-plan",
      "displayName": "OIDC Dynamic OP Certification",
      "outputDir": "OIDC Dynamic OP",
      "profile": "basic-op",
      "configFile": "dynamic-op.json",
      "requiresBrowser": true,
      "variants": {
        "server_metadata": "discovery",
        "client_registration": "dynamic_client"
      },
      "description": "OpenID Connect Dynamic Certification Profile - Dynamic Client Registration"
    },
    "fapi-2": {
      "name": "fapi2-security-profile-id2-test-plan",
      "displayName": "FAPI 2.0 Security Profile",
      "outputDir": "FAPI 2.0",
      "profile": "fapi-2",
      "configFile": "fapi-2.json",
      "requiresBrowser": true,
      "variants": {
        "client_auth_type": "private_key_jwt",
        "sender_constrain": "dpop",
        "fapi_profile": "plain_fapi"
      },
      "description": "Financial-grade API 2.0 Security Profile with PAR and private_key_jwt"
    },
    "formpost-basic": {
      "name": "oidcc-formpost-basic-certification-test-plan",
      "displayName": "OIDC Form Post Basic Certification",
      "outputDir": "OIDC Form Post Basic",
      "profile": "basic-op",
      "configFile": "basic-op.json",
      "requiresBrowser": true,
      "variants": {
        "server_metadata": "discovery",
        "client_registration": "dynamic_client"
      },
      "description": "OpenID Connect Form Post Response Mode - Basic Profile"
    },
    "hybrid-op": {
      "name": "oidcc-hybrid-certification-test-plan",
      "displayName": "OIDC Hybrid OP Certification",
      "outputDir": "OIDC Hybrid OP",
      "profile": "hybrid-op",
      "configFile": "hybrid-op.json",
      "requiresBrowser": true,
      "variants": {
        "server_metadata": "discovery",
        "client_registration": "dynamic_client"
      },
      "description": "OpenID Connect Hybrid Certification Profile"
    }
  },
  "environments": {
    "conformance": {
      "issuer": "https://conformance.authrim.com",
      "adminApiUrl": "https://conformance.authrim.com/api/admin"
    },
    "staging": {
      "issuer": "https://staging.authrim.com",
      "adminApiUrl": "https://staging.authrim.com/api/admin"
    },
    "local": {
      "issuer": "http://localhost:8786",
      "adminApiUrl": "http://localhost:8786/api/admin"
    }
  }
}
